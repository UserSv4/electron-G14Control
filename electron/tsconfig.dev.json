{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"lib": ["ESNext", "DOM"],
		"allowJs": true,
		"outDir": "build",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"moduleResolution": "node"
	},
	"ts-node": {
		"compiler": "typescript",
		"preferTsExts": true,
		"files": true,
		"emit": true
	},
	"include": ["**/*.ts", "**/*.d.ts", "**/*.js"],
	"exclude": ["build", "node_modules"]
}
